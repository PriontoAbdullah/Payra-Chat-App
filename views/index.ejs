<%- include('./partials/header.ejs'); %>

    <div id="login-container">
      <div id="left-column"></div>
      <div id="branding">
        <img src="./images/logo.png" />
        <h1>Login - Chat Application</h1>
      </div>
      <div id="login-form">
        <form method="post" action="/">
          <input
            type="text"
            name="username"
            value="+8801790123456"
            placeholder="Enter your mobile or email"
            value="<%= data.username %>"
          />
          <% if (errors.username) { %>
            <p class="error show"><%= errors.username.msg %></p>
          <% } %>
          
          <input type="password" name="password" value="TcM*S_$H5k" placeholder="Enter your password" />
          <% if (errors.password) { %>
            <p class="error show"><%= errors.password.msg %></p>
          <% } %>

          <% if (errors.common) { %>
            <p class="error show"><%= errors.common.msg %></p>
          <% } %>
          <input type="submit" value="Login" />
        </form>
      </div>
    </div>
  </body>
</html>
